#----- shortcut keys -----#

# start a terminal
bindsym $mod+t exec alacritty

# start emacs client
bindsym $mod+e exec emacsclient -c -a "emacs"

# start a browser
bindsym $mod+w exec brave

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id dmenu_run

# kill focused window
bindsym $mod+q kill

# power menu
bindsym $mod+x exec rofi -show power-menu -modi power-menu:rofi-power-menu

# rofi launcher
bindsym $mod+Shift+d exec rofi -show drun

# Scratchpads Apps
exec --no-startup-id thunar
for_window [class="Thunar"] move scratchpad

exec --no-startup-id pavucontrol
for_window [class="pavucontrol"] move scratchpad

# Toggle visibility
bindsym $mod+f [class="Thunar"] scratchpad show

bindsym $mod+m [class="pavucontrol"] scratchpad show


#----- window management -----#

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+s split h

# split in vertical orientation
bindsym $mod+v split v

